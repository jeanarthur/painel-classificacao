<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="./css/output.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <title>Painel de Classificação</title>
</head>
<body class="bg-[url('./img/background.png')] bg-no-repeat bg-cover bg-center h-screen font-poppins" style="background-image: url('./img/background.png');">
    <div class="flex h-full items-center">
        <div class="w-3/5 h-1/2 grid items-center mt-14">
            <div class="flex flex-col gap-2">
                <% classificacao.slice(0, 5).forEach(function(equipe, index) { %>
                    <div class="flex items-center px-8 mb-1">
                        <div class="flex justify-between rounded-lg px-[36px] py-2 <%= index === 0 ? 'bg-[#ffbb00]' : index === 1 ? 'bg-[#b3b1ab]' : index === 2 ? 'bg-[#e27a00]' : 'bg-[#ededed]' %> text-2xl text-[#430797] font-bold"><%= index + 1 %></div>
                        <div class="-ml-1 w-full flex justify-between rounded-lg px-6 py-4 bg-white">
                            <p class="text-2xl text-[#430797]"><%= equipe.equipe %></p>
                            <p class="text-2xl text-[#430797] font-bold"><%= equipe.pontuacao %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <div class="w-2/5 h-3/4 grid items-center mt-24">
            <div class="relative ml-6 mt-12 w-5/6 h-4/5 rounded-xl bg-[#651acf]">
                <div class="absolute bottom-0 w-full h-24 rounded-xl opacity-70 bg-gradient-to-t from-[#651acf] to-transparent z-50"></div>
                <ul class="list-none text-center text-xl text-white py-4 h-full overflow-auto no-scrollbar">
                    <% for (let i = 5; i < Math.min(20, classificacao.length); i++) { %>
                        <li><%= i + 1 %>....................<%= classificacao[i].equipe %>....................<%= classificacao[i].pontuacao %></li>
                    <% } %>
                </ul>
            </div>
        </div>        
    </div>
</body>
</html>
